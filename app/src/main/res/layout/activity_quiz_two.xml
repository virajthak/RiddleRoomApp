<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newsciback"
    tools:context=".QuizTwo">

    <TextView
        android:id="@+id/questionTextTwo"
        android:layout_width="201dp"
        android:layout_height="171dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="106dp"
        android:gravity="center"
        android:text="We live in the Galaxy named as Milky Way"
        android:textColor="#F1ECEC"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="226dp"
        android:layout_height="70dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="93dp"
        android:background="@drawable/newbutton"
        android:onClick="trueButtonTwo"
        android:text="@string/true_button"
        android:textColor="#F3EEEE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTextTwo" />

    <Button
        android:id="@+id/button5"
        android:layout_width="226dp"
        android:layout_height="70dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="91dp"
        android:background="@drawable/newbutton"
        android:onClick="falseButtonTwo"
        android:text="@string/false_button"
        android:textColor="#F3EFEF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/scoreTextTwo"
        android:layout_width="162dp"
        android:layout_height="33dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
        android:gravity="center"
        android:text="Score 0/20"
        android:textColor="#F1EEEE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <ProgressBar
        android:id="@+id/progressBarTwo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="204dp"
        android:layout_height="17dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="115dp"
        android:background="#F8F5F5"
        android:progressTint="#379FCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTextTwo" />

    <TextView
        android:id="@+id/questionNumberTwo"
        android:layout_width="83dp"
        android:layout_height="22dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="176dp"
        android:gravity="center"
        android:text="Q : 0/10"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>