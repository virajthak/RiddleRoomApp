<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newmovie"
    android:backgroundTintMode="add"
    tools:context=".QuizThree">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="196dp"
        android:layout_height="172dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="107dp"
        android:gravity="center"
        android:text="Tom Hanks was leading actor in Forest Gump"
        android:textColor="#E1DCDC"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="251dp"
        android:layout_height="70dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/truebutton"
        android:onClick="trueButton"
        android:text="True"
        android:textColor="#EDE9E9"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionText"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button2"
        android:layout_width="254dp"
        android:layout_height="68dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/truebutton"
        android:onClick="falseButton"
        android:text="False"
        android:textColor="#F4F1F1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="138dp"
        android:layout_height="41dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="128dp"
        android:text="Score 0/20"
        android:textColor="#EDE3E3"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ProgressBar
        android:id="@+id/progressBarView"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="243dp"
        android:layout_height="13dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="75dp"
        android:background="#DDD9D9"
        android:progressTint="#DF1212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreText" />

    <TextView
        android:id="@+id/questionNumberThree"
        android:layout_width="83dp"
        android:layout_height="25dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="175dp"
        android:gravity="center"
        android:text="Q : 0/10"
        android:textColor="#F3F0F0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>